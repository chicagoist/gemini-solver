{
  "manifest_version": 3,
  "name": "Gemini Exam Solver",
  "version": "1.6.1",
  "description": "Решает тесты на экране с помощью Gemini 2.5 Flash",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "icons": {
    "48": "icon.png",
    "96": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Решить вопрос",
    "default_icon": "icon.png"

  },
  "background": {
    "scripts": ["background.js"]
  },
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "gemini-solver@my-local-dev",
      "strict_min_version": "109.0"
    }
}
}