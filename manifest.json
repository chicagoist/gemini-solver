{
  "manifest_version": 3,
  "name": "Gemini Exam Solver",
  "version": "2.1.0",
  "description": "Решает тесты Cisco на экране с помощью Gemini",
  "author": "Valerii Dubkoff aka Chicagoist",
  "homepage_url": "https://github.com/chicagoist/gemini-solver",

  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  
  "action": {
    "default_title": "Открыть панель",
    "default_icon": "icon.png"
  },

  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "gemini-solver@my-local-dev",
      "strict_min_version": "109.0"
    }
  }
}